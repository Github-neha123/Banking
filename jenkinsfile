pipeline {
    agent any

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'master',
                    url: 'https://github.com/Github-neha123/Banking.git'
            }
        }

        stage('Build Placeholder') {
            steps {
                echo ' Repository cloned successfully. Skipping Python execution to avoid errors.'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t banking-app .'
            }
        }

        stage('Run Container') {
            steps {
                sh 'docker run --rm banking-app'
            }
        }
    }

    post {
        success {
            echo ' Pipeline completed successfully'
        }
    }
}