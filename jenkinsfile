pipeline {
    agent any

    stages {

        stage('Clone Repository') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Github-neha123/Banking.git'
            }
        }

        stage('Build Placeholder') {
            steps {
                echo ' Repository cloned successfully. Skipping Python execution to avoid errors.'
            }
        }
    }

    post {
        success {
            echo ' Pipeline completed successfully'
        }
    }
}